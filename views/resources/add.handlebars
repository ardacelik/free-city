<div class="card card-body">
    <form action="/resources/add" method="post">
        <h1>1. Event Details</h1>
                    <hr />
                    <div class="form-group">
                        <label for="name">Name</label>
                        <input
                            type="text"
                            class="form-control"
                            placeholder="Give it a short distinct name"
                            name="name"
                            required
                        >
                    </div>
                    <div class="form-group">
                        <label for="description">Description</label>
                        <textarea class="form-control" rows="5" name="description" required></textarea>
                    </div>
                    <div class="form-group">
                        <label for="address">Address</label>
                        <input
                            type="text"
                            class="form-control"
                            name="address"
                            required
                        >
                    </div>
                    <h1>2. Organizer Information</h1>
                    <hr />
                    <div class="form-group">
                        <label for="organizerName">Organizer Name</label>
                        <input
                            type="text"
                            class="form-control"
                            placeholder="Who's organizing this event?"
                            name="organizerName"
                            required
                        >
                    </div>
                    <div class="form-group">
                        <label for="organizerDesc">Organizer Description</label>
                        <textarea class="form-control" rows="5" name="organizerDesc" required></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary btn-block">
                        Submit
                    </button>
                </form>
</div>